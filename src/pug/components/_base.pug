block vars
    - var pageTitle
    - var isAside = false
    - var isInner = false

<!DOCTYPE html>
html(lang="ru" class=`${isInner ? "inner-page" : ""}`)
    head
        meta(charset="UTF-8")
        title #{pageTitle} - ENERGY FM
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(href="css/style.min.css" rel="stylesheet")
    body.page.page_bg_default.webp

        .layout-grid
            include ./main-player
            include ./page-header

            .layout-grid__main
                .container.layout-grid__inner
                    #MPAjaxMainBlock
                        if isInner
                            .layout-grid__content
                                block content
                        else
                            block content
            .layout-grid__footer
                include ./page-footer

        .popup.popup_content_video.popup_view_regular
            button.popup__close(type="button" aria-label="Закрыть всплывающее окно")
            .popup__inner
                .iframe-wrap

